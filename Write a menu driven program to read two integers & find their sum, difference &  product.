#include <stdio.h>

int main() {
    int a ,b,n,result=0;
    printf ("enter two integers");
    scanf("%d%d",&a,&b);
    printf("display case 1 for addition 2 for substraction 3 for multiplication");
    scanf("%d",&n);
    switch(n){
    case 1: result = a+b;
        printf("the result is %d",result);
        break;
    case 2: result = a-b;
    printf("the result is %d",result);
      break;
    case 3: result=a*b;
    printf("the result is %d",result);
      break;
      default: printf("not applicable");
      break;
    }
    
}
